<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/red"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/likes_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:contentDescription="TODO"
        android:src="@drawable/ic_likes_white" />

    <TextView
        android:id="@+id/likes_count_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/white"
        android:textSize="12sp"
        tools:text="5" />

    <ImageView
        android:id="@+id/follows_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:contentDescription="TODO"
        android:src="@drawable/ic_profile_white" />

    <TextView
        android:id="@+id/follows_count_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/white"
        android:textSize="12sp"
        tools:text="5" />

    <ImageView
        android:id="@+id/comments_image"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:contentDescription="TODO"
        android:src="@drawable/ic_comments_white" />

    <TextView
        android:id="@+id/comments_count_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:paddingEnd="8dp"
        android:textColor="@color/white"
        android:textSize="12sp"
        tools:text="5" />

</LinearLayout>