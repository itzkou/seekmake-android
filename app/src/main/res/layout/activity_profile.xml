<?xml version="1.0" encoding="utf-8"?>
<com.mxn.soul.flowingdrawer_core.FlowingDrawer xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    app:edMenuBackground="#FCFCFC"
    app:edMenuSize="260dp"
    app:edPosition="2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".screens.home.HomeActivity">


        <TextView
            android:id="@+id/username_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/profile_image"
            app:layout_constraintStart_toStartOf="@+id/profile_image"
            app:layout_constraintTop_toBottomOf="@+id/profile_image"
            tools:fontFamily="@font/poppins"
            tools:text="user.name" />

        <TextView
            android:id="@+id/bio_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins_light"
            android:text="bio"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@id/username_text"
            app:layout_constraintTop_toBottomOf="@id/username_text" />

        <xyz.schwaab.avvylib.AvatarView
            android:id="@+id/profile_image"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            app:avvy_border_highlight_color="#03A9F4"
            app:avvy_border_highlight_color_end="#00BCD4"
            app:avvy_border_thickness="1dp"
            app:avvy_border_thickness_highlight="2dp"
            app:avvy_distance_to_border="1dp"
            app:avvy_highlighted="false"
            app:avvy_loading_arches_degree_area="360"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            tools:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/posts_count_text"
            style="@style/profile_text_count"
            android:layout_marginStart="64dp"
            app:layout_constraintBottom_toBottomOf="@+id/profile_image"
            app:layout_constraintStart_toEndOf="@+id/profile_image"
            app:layout_constraintTop_toTopOf="@+id/profile_image"
            app:layout_constraintVertical_bias="0.272"
            tools:text="50" />

        <TextView
            android:id="@+id/posts_text"
            style="@style/profile_text"
            android:text="@string/posts"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="@+id/posts_count_text"
            app:layout_constraintStart_toStartOf="@+id/posts_count_text"
            app:layout_constraintTop_toBottomOf="@+id/posts_count_text" />

        <TextView
            android:id="@+id/followers_count_text"
            style="@style/profile_text_count"
            android:layout_marginStart="56dp"
            app:layout_constraintBottom_toBottomOf="@+id/posts_count_text"
            app:layout_constraintStart_toEndOf="@+id/posts_count_text"
            app:layout_constraintTop_toTopOf="@+id/posts_count_text"
            app:layout_constraintVertical_bias="0.0"
            tools:text="100" />

        <TextView
            android:id="@+id/followers_text"
            style="@style/profile_text"
            android:text="@string/followers"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="@+id/followers_count_text"
            app:layout_constraintStart_toStartOf="@+id/followers_count_text"
            app:layout_constraintTop_toBottomOf="@+id/followers_count_text" />

        <TextView
            android:id="@+id/following_count_text"
            style="@style/profile_text_count"
            android:layout_marginStart="56dp"
            app:layout_constraintBottom_toBottomOf="@+id/followers_count_text"
            app:layout_constraintStart_toEndOf="@+id/followers_count_text"
            app:layout_constraintTop_toTopOf="@+id/followers_count_text"
            app:layout_constraintVertical_bias="0.0"
            tools:text="200" />

        <TextView
            android:id="@+id/following_text"
            style="@style/profile_text"
            android:text="@string/following"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="@+id/following_count_text"
            app:layout_constraintStart_toStartOf="@+id/following_count_text"
            app:layout_constraintTop_toBottomOf="@+id/following_count_text" />

        <Button
            android:id="@+id/edit_profile_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/button_bg"
            android:fontFamily="@font/poppins"
            android:minHeight="0dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="@string/edit_profile"
            android:textAllCaps="false"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bio_label" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/edit_profile_btn">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tabIndicatorFullWidth="true"
                app:tabSelectedTextColor="@color/colorPrimary"
                app:tabTextAppearance="@style/TabLayoutTextFont"
                app:tabTextColor="@color/colorPrimary" />

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/vp_profile"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tabs" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <include
            android:id="@+id/include"
            layout="@layout/bottom_navigation_view" />


        <include
            android:id="@+id/toolbar"
            layout="@layout/top_bar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/settings_image"
            style="@style/icon"
            android:src="@drawable/ic_more"
            app:layout_constraintBottom_toBottomOf="@+id/toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/toolbar" />

        <ImageView
            android:id="@+id/add_story"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="52dp"
            app:layout_constraintStart_toEndOf="@+id/username_text"
            app:layout_constraintTop_toTopOf="@+id/profile_image"
            app:srcCompat="@drawable/ic_adda" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.mxn.soul.flowingdrawer_core.FlowingMenuLayout
        android:id="@+id/menulayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/id_container_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/add_friends_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ic_add_friends_image"
                    style="@style/icon"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/ic_add_friends"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Discover people"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="@id/ic_add_friends_image"
                    app:layout_constraintStart_toEndOf="@id/ic_add_friends_image"
                    app:layout_constraintTop_toTopOf="@id/ic_add_friends_image" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </FrameLayout>

    </com.mxn.soul.flowingdrawer_core.FlowingMenuLayout>

</com.mxn.soul.flowingdrawer_core.FlowingDrawer>