<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp"

    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imTech"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_laser"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:contentDescription="TODO"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tx_qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/poppins"
            android:text="qty"
            android:textColor="@color/violet"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvType" />

        <TextView
            android:id="@+id/tx_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_light"
            android:text="date"
            android:textColor="@color/darkGrey"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/tvType"
            app:layout_constraintTop_toBottomOf="@+id/tx_qty" />

        <ImageView
            android:id="@+id/tx_technqiue"
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="@+id/imTech"
            app:layout_constraintEnd_toEndOf="@+id/imTech"
            app:layout_constraintStart_toStartOf="@+id/imTech"
            android:contentDescription="TODO"
            app:layout_constraintTop_toTopOf="@+id/imTech" />


        <TextView
            android:id="@+id/tvType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/poppins"
            android:text="name"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/imTech"
            app:layout_constraintTop_toTopOf="@+id/imTech" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="TODO"
            app:srcCompat="@drawable/ic_dots" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="18dp"
            android:fontFamily="@font/poppins_medium"
            android:text="status"
            android:textColor="@color/blue"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imMaterial"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvQtycount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_light"
            android:text="pieces"
            android:textColor="@color/darkGrey"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/tx_qty"
            app:layout_constraintStart_toStartOf="@+id/tx_qty"
            app:layout_constraintTop_toBottomOf="@+id/tx_qty" />

        <ImageView
            android:id="@+id/imMaterial"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="TODO"
            app:srcCompat="@drawable/ic_acier" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>